        </div>
        
    </div>
</div>


           

            <!-- Tweet 2 -->
            @each(profile in profiles)
            <div class="p-4 border-b flex space-x-4 bg-black text-white">
                 <a href="">
                <img src="{{ profile.user.avatar }}" class="w-12 h-12 rounded-full">
                </a>
                <div>
                    
                    <p class="text-white">{{ profile.content }}</p>
                    @if(profile.image)
                    <img src="{{ profile.image }}" alt="Image du tweet" width="550 rounded" class="rounded-md">
                @endif
                    <div class="flex space-x-6 text-gray-500 mt-2">
                        <img src="chat-bubble.png" ><span> 3</span>
                        <img src="heart.png" id ="heart-icon"><span> 3</span>
                        <img src="retweet.png" ><span> 3</span>
                         <img src="share.png" ><span> 3</span>
                    </div>
                </div>
            </div>
             @endeach
