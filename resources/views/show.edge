     <script>
        // Gestion du clic sur l'ic√¥ne du c≈ìur
        const heartIcon = document.getElementById('heart-icon');

        heartIcon.addEventListener('click', () => {
            // Ajoute ou enl√®ve la classe text-red-500 pour changer la couleur du c≈ìur
            
            heartIcon.classList.toggle('bg-red');
